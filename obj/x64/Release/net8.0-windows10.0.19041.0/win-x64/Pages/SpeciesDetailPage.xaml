<?xml version="1.0" encoding="utf-8"?>
<Page x:ConnectionId='1'
    x:Class="HGEngineGUI.Pages.SpeciesDetailPage"
    x:Name="SpeciesPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                xmlns:local="using:HGEngineGUI.Pages"
                xmlns:data="using:HGEngineGUI.Data"
    mc:Ignorable="d">
    <Page.KeyboardAccelerators>
        <KeyboardAccelerator x:ConnectionId='2' Key="S" Modifiers="Control"                  />
    </Page.KeyboardAccelerators>
    <Grid Padding="16" RowDefinitions="Auto,*">
        <StackPanel Orientation="Horizontal" Spacing="12">
            <Image x:ConnectionId='70' x:Name="Icon" Width="64" Height="64"/>
            <StackPanel>
                <TextBlock x:ConnectionId='71' x:Name="Title" FontSize="22" FontWeight="SemiBold"/>
                <TextBlock x:ConnectionId='72' x:Name="Subtitle" Foreground="Gray"/>
                <TextBlock x:ConnectionId='73' x:Name="StatusText" Foreground="Red" TextWrapping="WrapWholeWords"/>
            </StackPanel>
        </StackPanel>

        <TabView x:ConnectionId='3' x:Name="Tabs" Grid.Row="1">
            <TabViewItem Header="Overview">
                <ScrollViewer>
                    <StackPanel Padding="8" Spacing="10">
                        <CommandBar>
                            <AppBarButton x:ConnectionId='68' Icon="Save" Label="Save"                       />
                            <AppBarButton x:ConnectionId='69' Icon="Page" Label="Preview"                          />
                        </CommandBar>
                        <Grid ColumnDefinitions="*,*" RowDefinitions="Auto,Auto,Auto,Auto,Auto,Auto,Auto,Auto,Auto,Auto,Auto,Auto,Auto,Auto,Auto" ColumnSpacing="12" RowSpacing="8">
                            <TextBlock Text="Types" Grid.Row="0"/>
                            <StackPanel Grid.Row="0" Grid.Column="1" Orientation="Horizontal" Spacing="8">
                                <ComboBox x:ConnectionId='66' x:Name="Type1Box"                                                                Width="180"/>
                                <ComboBox x:ConnectionId='67' x:Name="Type2Box"                                                                Width="180"/>
                            </StackPanel>

                            <TextBlock Text="Base Stats" Grid.Row="1"/>
                            <StackPanel Grid.Row="1" Grid.Column="1" Orientation="Horizontal" Spacing="6">
                                <TextBox x:ConnectionId='60' x:Name="HpBox" Header="HP" Width="80"/>
                                <TextBox x:ConnectionId='61' x:Name="AtkBox" Header="Atk" Width="80"/>
                                <TextBox x:ConnectionId='62' x:Name="DefBox" Header="Def" Width="80"/>
                                <TextBox x:ConnectionId='63' x:Name="SpABox" Header="SpA" Width="80"/>
                                <TextBox x:ConnectionId='64' x:Name="SpDBox" Header="SpD" Width="80"/>
                                <TextBox x:ConnectionId='65' x:Name="SpeBox" Header="Spe" Width="80"/>
                            </StackPanel>

                            <TextBlock Text="EV Yields" Grid.Row="2"/>
                            <StackPanel Grid.Row="2" Grid.Column="1" Orientation="Horizontal" Spacing="6">
                                <TextBox x:ConnectionId='54' x:Name="EvHpBox" Header="HP" Width="80"/>
                                <TextBox x:ConnectionId='55' x:Name="EvAtkBox" Header="Atk" Width="80"/>
                                <TextBox x:ConnectionId='56' x:Name="EvDefBox" Header="Def" Width="80"/>
                                <TextBox x:ConnectionId='57' x:Name="EvSpABox" Header="SpA" Width="80"/>
                                <TextBox x:ConnectionId='58' x:Name="EvSpDBox" Header="SpD" Width="80"/>
                                <TextBox x:ConnectionId='59' x:Name="EvSpeBox" Header="Spe" Width="80"/>
                            </StackPanel>

                            <TextBlock Text="Abilities" Grid.Row="3"/>
                            <StackPanel Grid.Row="3" Grid.Column="1" Orientation="Horizontal" Spacing="8">
                                <ComboBox x:ConnectionId='52' x:Name="Ability1Box" Width="220"/>
                                <ComboBox x:ConnectionId='53' x:Name="Ability2Box" Width="220"/>
                            </StackPanel>
                            <TextBlock Text="Hidden Ability" Grid.Row="4"/>
                            <StackPanel Grid.Row="4" Grid.Column="1" Orientation="Horizontal" Spacing="8">
                                <ComboBox x:ConnectionId='50' x:Name="AbilityHiddenBox" Width="220"/>
                                <Button x:ConnectionId='51' x:Name="PreviewHiddenAbilityBtn" Content="Preview"                               />
                            </StackPanel>

                            <TextBlock Text="Egg Groups" Grid.Row="5"/>
                            <StackPanel Grid.Row="5" Grid.Column="1" Orientation="Horizontal" Spacing="8">
                                <ComboBox x:ConnectionId='48' x:Name="Egg1Box"                                                                    Width="220"/>
                                <ComboBox x:ConnectionId='49' x:Name="Egg2Box"                                                                    Width="220"/>
                            </StackPanel>

                            <TextBlock Text="Growth Rate" Grid.Row="6"/>
                            <ComboBox x:ConnectionId='35' x:Name="GrowthBox" Grid.Row="6" Grid.Column="1"                                                                      Width="220"/>

                            <TextBlock Text="Gender/Catch/BaseExp/Egg cycles/Friendship" Grid.Row="7"/>
                            <StackPanel Grid.Row="7" Grid.Column="1" Orientation="Horizontal" Spacing="6">
                                <TextBox x:ConnectionId='43' x:Name="GenderBox" Header="GenderRatio" Width="120"/>
                                <TextBox x:ConnectionId='44' x:Name="CatchBox" Header="CatchRate" Width="120"/>
                                <TextBox x:ConnectionId='45' x:Name="BaseExpBox" Header="BaseExp" Width="120"/>
                                <TextBox x:ConnectionId='46' x:Name="EggCyclesBox" Header="EggCycles" Width="120"/>
                                <TextBox x:ConnectionId='47' x:Name="FriendBox" Header="Friendship" Width="120"/>
                            </StackPanel>

                            <TextBlock Text="Held Items" Grid.Row="8"/>
                            <StackPanel Grid.Row="8" Grid.Column="1" Orientation="Horizontal" Spacing="8">
                                <ComboBox x:ConnectionId='41' x:Name="Item1Box"                                                                Width="220"/>
                                <ComboBox x:ConnectionId='42' x:Name="Item2Box"                                                                Width="220"/>
                            </StackPanel>

                            <TextBlock Text="Run Chance" Grid.Row="9"/>
                            <TextBox x:ConnectionId='36' x:Name="RunChanceBox" Grid.Row="9" Grid.Column="1" PlaceholderText="0" Width="180"/>

                            <TextBlock Text="Dex Classification" Grid.Row="10"/>
                            <TextBox x:ConnectionId='37' x:Name="DexClassBox" Grid.Row="10" Grid.Column="1" PlaceholderText="Seed Pokémon"/>

                            <TextBlock Text="Dex Entry" Grid.Row="11"/>
                            <TextBox x:ConnectionId='38' x:Name="DexEntryBox" Grid.Row="11" Grid.Column="1" AcceptsReturn="True" TextWrapping="Wrap" Height="96"/>

                            <TextBlock Text="Dex Height" Grid.Row="12"/>
                            <TextBox x:ConnectionId='39' x:Name="DexHeightBox" Grid.Row="12" Grid.Column="1" PlaceholderText="3’03”" Width="180"/>

                            <TextBlock Text="Dex Weight" Grid.Row="13"/>
                            <TextBox x:ConnectionId='40' x:Name="DexWeightBox" Grid.Row="13" Grid.Column="1" PlaceholderText="28.7 lbs." Width="180"/>
                        </Grid>
                    </StackPanel>
                </ScrollViewer>
            </TabViewItem>
            <TabViewItem Header="Level-up Moves">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <CommandBar Grid.Row="0">
                        <AppBarButton x:ConnectionId='31' Icon="Add" Label="Add"                     />
                        <AppBarButton x:ConnectionId='32' Icon="Delete" Label="Delete"                        />
                        <AppBarButton x:ConnectionId='33' Icon="Save" Label="Save"                      />
                        <AppBarButton x:ConnectionId='34' Icon="Page" Label="Preview"                         />
                    </CommandBar>
                    <ItemsControl x:ConnectionId='27' Grid.Row="1" x:Name="LevelUpList"                             >
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <StackPanel/>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal" Spacing="8" Padding="4">
                                    <TextBox Header="Level" Width="120" Text="{Binding Level, Mode=TwoWay}"/>
                                    <ComboBox x:ConnectionId='29' Width="320" IsEditable="True" PlaceholderText="MOVE_*"                            Text="{Binding Move, Mode=TwoWay}"/>
                                    <Button x:ConnectionId='30' Content="Remove"                           />
                                </StackPanel>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </Grid>
            </TabViewItem>
                        <TabViewItem Header="TM/HM">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>
                                <CommandBar Grid.Row="0">
                                    <AppBarButton x:ConnectionId='25' Icon="Save" Label="Save"                   />
                                    <AppBarButton x:ConnectionId='26' Icon="Page" Label="Preview"                      />
                                </CommandBar>
                                <AutoSuggestBox x:ConnectionId='23' Grid.Row="1" x:Name="TmSearch" PlaceholderText="Search TM/HM"                         />
                                <ListView x:ConnectionId='24' Grid.Row="2" x:Name="TmHmList"                                               SelectionMode="Multiple" ScrollViewer.VerticalScrollBarVisibility="Auto" ScrollViewer.VerticalScrollMode="Auto" ScrollViewer.HorizontalScrollBarVisibility="Auto" ScrollViewer.HorizontalScrollMode="Enabled"/>
                            </Grid>
                         </TabViewItem>
            <TabViewItem Header="Evolutions">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <CommandBar Grid.Row="0">
                        <AppBarButton x:ConnectionId='19' Icon="Add" Label="Add"                       />
                        <AppBarButton x:ConnectionId='20' Icon="Delete" Label="Delete"                          />
                        <AppBarButton x:ConnectionId='21' Icon="Save" Label="Save"                         />
                        <AppBarButton x:ConnectionId='22' Icon="Page" Label="Preview"                            />
                    </CommandBar>
                    <StackPanel Grid.Row="1" Spacing="8">
                        <ScrollViewer VerticalScrollBarVisibility="Auto" VerticalScrollMode="Auto">
                            <StackPanel x:ConnectionId='18' x:Name="EvolutionStack"                                />
                        </ScrollViewer>
                    </StackPanel>
                </Grid>
            </TabViewItem>
            <TabViewItem Header="Egg Moves">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <CommandBar Grid.Row="0">
                        <AppBarButton x:ConnectionId='14' Icon="Add" Label="Add"                     />
                        <AppBarButton x:ConnectionId='15' Icon="Delete" Label="Delete"                        />
                        <AppBarButton x:ConnectionId='16' Icon="Save" Label="Save"                       />
                        <AppBarButton x:ConnectionId='17' Icon="Page" Label="Preview"                          />
                    </CommandBar>
                    <ItemsControl x:ConnectionId='10' Grid.Row="1" x:Name="EggMovesList"                              >
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <StackPanel/>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal" Spacing="8" Padding="4">
                                    <ComboBox x:ConnectionId='12' Width="320" IsEditable="True" PlaceholderText="MOVE_*"                            Text="{Binding Move, Mode=TwoWay}"/>
                                    <Button x:ConnectionId='13' Content="Remove"                       />
                                </StackPanel>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </Grid>
            </TabViewItem>
            <TabViewItem Header="Tutor Moves">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <CommandBar Grid.Row="0">
                        <AppBarButton x:ConnectionId='8' Icon="Save" Label="Save"                     />
                        <AppBarButton x:ConnectionId='9' Icon="Page" Label="Preview"                        />
                    </CommandBar>
                    <AutoSuggestBox x:ConnectionId='4' Grid.Row="1" x:Name="TutorSearch" PlaceholderText="Search tutor/move"                            />
                    <ListView x:ConnectionId='5' Grid.Row="2" x:Name="TutorList"                                                       SelectionMode="Multiple" ScrollViewer.VerticalScrollBarVisibility="Auto" ScrollViewer.VerticalScrollMode="Auto" ScrollViewer.HorizontalScrollBarVisibility="Auto" ScrollViewer.HorizontalScrollMode="Enabled">
                        <ListView.ItemTemplate>
                            <DataTemplate                      >
                                <TextBlock x:ConnectionId='7'                />
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </Grid>
            </TabViewItem>
        </TabView>
    </Grid>
</Page>



