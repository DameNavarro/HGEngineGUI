<?xml version="1.0" encoding="utf-8"?>
<Page x:ConnectionId='1'
    x:Class="HGEngineGUI.Pages.SpeciesListPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local="using:HGEngineGUI.Pages"
    mc:Ignorable="d">
    <Grid Padding="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal" Spacing="12">
            <TextBox x:ConnectionId='8' x:Name="SearchBox" PlaceholderText="Search species"                               Width="300"/>
            <TextBlock Text="Read-only preview of parsed species from include/constants/species.h" VerticalAlignment="Center"/>
        </StackPanel>
        <ListView x:ConnectionId='2' Grid.Row="1" x:Name="SpeciesList"                                               IsItemClickEnabled="True"                         SelectionMode="Single" ScrollViewer.HorizontalScrollBarVisibility="Auto" ScrollViewer.HorizontalScrollMode="Enabled">
            <ListView.ItemTemplate>
                <DataTemplate                                >
                    <Grid x:ConnectionId='4' Padding="4" ColumnSpacing="8">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Image x:ConnectionId='5' Width="40" Height="40"                                         Stretch="Uniform"/>
                        <TextBlock x:ConnectionId='6' Grid.Column="1" Width="64"                   />
                        <TextBlock x:ConnectionId='7' Grid.Column="2"                     />
                    </Grid>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
        <TextBlock Grid.Row="2" Foreground="Gray" Margin="0,8,0,0" Text="Open a species to view Learnsets and Evolutions (coming next)."/>
    </Grid>
</Page>



