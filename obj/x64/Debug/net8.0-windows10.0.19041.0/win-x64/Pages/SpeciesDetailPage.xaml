<?xml version="1.0" encoding="utf-8"?>
<Page x:ConnectionId='1'
    x:Class="HGEngineGUI.Pages.SpeciesDetailPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                xmlns:local="using:HGEngineGUI.Pages"
                xmlns:data="using:HGEngineGUI.Data"
    mc:Ignorable="d">
    <Page.KeyboardAccelerators>
        <KeyboardAccelerator x:ConnectionId='2' Key="S" Modifiers="Control"                  />
    </Page.KeyboardAccelerators>
    <Grid Padding="16" RowDefinitions="Auto,*">
        <StackPanel Orientation="Horizontal" Spacing="12">
            <Image x:ConnectionId='71' x:Name="Icon" Width="64" Height="64"/>
            <StackPanel>
                <TextBlock x:ConnectionId='72' x:Name="Title" FontSize="22" FontWeight="SemiBold"/>
                <TextBlock x:ConnectionId='73' x:Name="Subtitle" Foreground="Gray"/>
            </StackPanel>
        </StackPanel>

        <TabView x:ConnectionId='3' x:Name="Tabs" Grid.Row="1">
            <TabViewItem Header="Overview">
                <ScrollViewer>
                    <StackPanel Padding="8" Spacing="10">
                        <CommandBar>
                            <AppBarButton x:ConnectionId='69' Icon="Save" Label="Save"                       />
                            <AppBarButton x:ConnectionId='70' Icon="Page" Label="Preview"                          />
                        </CommandBar>
                        <Grid ColumnDefinitions="*,*" RowDefinitions="Auto,Auto,Auto,Auto,Auto,Auto,Auto,Auto,Auto" ColumnSpacing="12" RowSpacing="8">
                            <TextBlock Text="Types" Grid.Row="0"/>
                            <StackPanel Grid.Row="0" Grid.Column="1" Orientation="Horizontal" Spacing="8">
                                <ComboBox x:ConnectionId='67' x:Name="Type1Box"                                                                Width="180"/>
                                <ComboBox x:ConnectionId='68' x:Name="Type2Box"                                                                Width="180"/>
                            </StackPanel>

                            <TextBlock Text="Base Stats" Grid.Row="1"/>
                            <StackPanel Grid.Row="1" Grid.Column="1" Orientation="Horizontal" Spacing="6">
                                <TextBox x:ConnectionId='61' x:Name="HpBox" Header="HP" Width="80"/>
                                <TextBox x:ConnectionId='62' x:Name="AtkBox" Header="Atk" Width="80"/>
                                <TextBox x:ConnectionId='63' x:Name="DefBox" Header="Def" Width="80"/>
                                <TextBox x:ConnectionId='64' x:Name="SpABox" Header="SpA" Width="80"/>
                                <TextBox x:ConnectionId='65' x:Name="SpDBox" Header="SpD" Width="80"/>
                                <TextBox x:ConnectionId='66' x:Name="SpeBox" Header="Spe" Width="80"/>
                            </StackPanel>

                            <TextBlock Text="EV Yields" Grid.Row="2"/>
                            <StackPanel Grid.Row="2" Grid.Column="1" Orientation="Horizontal" Spacing="6">
                                <TextBox x:ConnectionId='55' x:Name="EvHpBox" Header="HP" Width="80"/>
                                <TextBox x:ConnectionId='56' x:Name="EvAtkBox" Header="Atk" Width="80"/>
                                <TextBox x:ConnectionId='57' x:Name="EvDefBox" Header="Def" Width="80"/>
                                <TextBox x:ConnectionId='58' x:Name="EvSpABox" Header="SpA" Width="80"/>
                                <TextBox x:ConnectionId='59' x:Name="EvSpDBox" Header="SpD" Width="80"/>
                                <TextBox x:ConnectionId='60' x:Name="EvSpeBox" Header="Spe" Width="80"/>
                            </StackPanel>

                            <TextBlock Text="Abilities" Grid.Row="3"/>
                            <StackPanel Grid.Row="3" Grid.Column="1" Orientation="Horizontal" Spacing="8">
                                <ComboBox x:ConnectionId='53' x:Name="Ability1Box"                                                                   Width="220"/>
                                <ComboBox x:ConnectionId='54' x:Name="Ability2Box"                                                                   Width="220"/>
                            </StackPanel>

                            <TextBlock Text="Egg Groups" Grid.Row="4"/>
                            <StackPanel Grid.Row="4" Grid.Column="1" Orientation="Horizontal" Spacing="8">
                                <ComboBox x:ConnectionId='51' x:Name="Egg1Box"                                                                    Width="220"/>
                                <ComboBox x:ConnectionId='52' x:Name="Egg2Box"                                                                    Width="220"/>
                            </StackPanel>

                            <TextBlock Text="Growth Rate" Grid.Row="5"/>
                            <ComboBox x:ConnectionId='44' x:Name="GrowthBox" Grid.Row="5" Grid.Column="1"                                                                      Width="220"/>

                            <TextBlock Text="Gender/Catch/Egg cycles/Friendship" Grid.Row="6"/>
                            <StackPanel Grid.Row="6" Grid.Column="1" Orientation="Horizontal" Spacing="6">
                                <TextBox x:ConnectionId='47' x:Name="GenderBox" Header="GenderRatio" Width="120"/>
                                <TextBox x:ConnectionId='48' x:Name="CatchBox" Header="CatchRate" Width="120"/>
                                <TextBox x:ConnectionId='49' x:Name="EggCyclesBox" Header="EggCycles" Width="120"/>
                                <TextBox x:ConnectionId='50' x:Name="FriendBox" Header="Friendship" Width="120"/>
                            </StackPanel>

                            <TextBlock Text="Held Items" Grid.Row="7"/>
                            <StackPanel Grid.Row="7" Grid.Column="1" Orientation="Horizontal" Spacing="8">
                                <ComboBox x:ConnectionId='45' x:Name="Item1Box"                                                                Width="220"/>
                                <ComboBox x:ConnectionId='46' x:Name="Item2Box"                                                                Width="220"/>
                            </StackPanel>
                        </Grid>
                    </StackPanel>
                </ScrollViewer>
            </TabViewItem>
            <TabViewItem Header="Level-up Moves">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <CommandBar Grid.Row="0">
                        <AppBarButton x:ConnectionId='40' Icon="Add" Label="Add"                     />
                        <AppBarButton x:ConnectionId='41' Icon="Delete" Label="Delete"                        />
                        <AppBarButton x:ConnectionId='42' Icon="Save" Label="Save"                      />
                        <AppBarButton x:ConnectionId='43' Icon="Page" Label="Preview"                         />
                    </CommandBar>
                    <ListView x:ConnectionId='35' Grid.Row="1" x:Name="LevelUpList" ScrollViewer.VerticalScrollBarVisibility="Auto" ScrollViewer.VerticalScrollMode="Auto" ScrollViewer.HorizontalScrollBarVisibility="Auto" ScrollViewer.HorizontalScrollMode="Enabled">
                        <ListView.ItemTemplate>
                            <DataTemplate                                >
                                <Grid x:ConnectionId='37' ColumnSpacing="8">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBox x:ConnectionId='38' Width="64"                                   />
                                    <ComboBox x:ConnectionId='39' Grid.Column="1"                                                                IsEditable="True"                                                                                                       />
                                </Grid>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </Grid>
            </TabViewItem>
                        <TabViewItem Header="TM/HM">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>
                                <CommandBar Grid.Row="0">
                                    <AppBarButton x:ConnectionId='33' Icon="Save" Label="Save"                   />
                                    <AppBarButton x:ConnectionId='34' Icon="Page" Label="Preview"                      />
                                </CommandBar>
                                <AutoSuggestBox x:ConnectionId='31' Grid.Row="1" x:Name="TmSearch" PlaceholderText="Search TM/HM"                         />
                                <ListView x:ConnectionId='32' Grid.Row="2" x:Name="TmHmList"                                               SelectionMode="Multiple" ScrollViewer.VerticalScrollBarVisibility="Auto" ScrollViewer.VerticalScrollMode="Auto" ScrollViewer.HorizontalScrollBarVisibility="Auto" ScrollViewer.HorizontalScrollMode="Enabled"/>
                            </Grid>
                         </TabViewItem>
            <TabViewItem Header="Evolutions">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <CommandBar Grid.Row="0">
                        <AppBarButton x:ConnectionId='27' Icon="Add" Label="Add"                       />
                        <AppBarButton x:ConnectionId='28' Icon="Delete" Label="Delete"                          />
                        <AppBarButton x:ConnectionId='29' Icon="Save" Label="Save"                         />
                        <AppBarButton x:ConnectionId='30' Icon="Page" Label="Preview"                            />
                    </CommandBar>
                    <ListView x:ConnectionId='17' Grid.Row="1" x:Name="EvolutionList" ScrollViewer.VerticalScrollBarVisibility="Auto" ScrollViewer.VerticalScrollMode="Auto" ScrollViewer.HorizontalScrollBarVisibility="Auto" ScrollViewer.HorizontalScrollMode="Enabled">
                        <ListView.ItemTemplate>
                            <DataTemplate                                  >
                                <Border x:ConnectionId='19' Padding="10" Margin="4" CornerRadius="6" Background="{ThemeResource CardBackgroundFillColorDefaultBrush}">
                                    <Grid ColumnSpacing="12" VerticalAlignment="Center">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <!-- Left: Method + helper pickers -->
                                        <StackPanel Grid.Column="0" Spacing="8">
                                            <ComboBox x:ConnectionId='23'                                                                                                                       IsEditable="True"                                            />
                                            <StackPanel Orientation="Horizontal" Spacing="8">
                                                <ComboBox x:ConnectionId='26' x:Name="EvoParamItemBox"                                                                MinWidth="220"                                          />
                                                <TextBlock Text="(EVO_ITEM)"/>
                                            </StackPanel>
                                            <StackPanel Orientation="Horizontal" Spacing="8">
                                                <ComboBox x:ConnectionId='25' x:Name="EvoParamMoveBox"                                                                MinWidth="220"                                          />
                                                <TextBlock Text="(EVO_MOVE)"/>
                                            </StackPanel>
                                            <StackPanel Orientation="Horizontal" Spacing="8">
                                                <ComboBox x:ConnectionId='24' x:Name="EvoParamMapBox"                                                               MinWidth="220"                                         />
                                                <TextBlock Text="(EVO_MAP)"/>
                                            </StackPanel>
                                        </StackPanel>

                                        <!-- Middle: Param + Friendship time -->
                                        <StackPanel Grid.Column="1" Spacing="8">
                                            <TextBox x:ConnectionId='21' x:Name="EvoParamBox" Header="Param (number)"                                   />
                                            <StackPanel Orientation="Horizontal" Spacing="8">
                                                <TextBlock Text="Friendship time:" VerticalAlignment="Center"/>
                                                <ComboBox x:ConnectionId='22' x:Name="EvoFriendTimeBox" MinWidth="180"                                                >
                                                    <x:String>None</x:String>
                                                    <x:String>DAY</x:String>
                                                    <x:String>NIGHT</x:String>
                                                    <x:String>MORNING</x:String>
                                                    <x:String>EVENING</x:String>
                                                </ComboBox>
                                            </StackPanel>
                                        </StackPanel>

                                        <!-- Right: Target species -->
                                        <ComboBox x:ConnectionId='20' Grid.Column="2"                                                                                                                   IsEditable="True" MinWidth="220"/>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </Grid>
            </TabViewItem>
            <TabViewItem Header="Egg Moves">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <CommandBar Grid.Row="0">
                        <AppBarButton x:ConnectionId='13' Icon="Add" Label="Add"                     />
                        <AppBarButton x:ConnectionId='14' Icon="Delete" Label="Delete"                        />
                        <AppBarButton x:ConnectionId='15' Icon="Save" Label="Save"                       />
                        <AppBarButton x:ConnectionId='16' Icon="Page" Label="Preview"                          />
                    </CommandBar>
                    <ListView x:ConnectionId='10' Grid.Row="1" x:Name="EggMovesList" ScrollViewer.VerticalScrollBarVisibility="Auto" ScrollViewer.VerticalScrollMode="Auto" ScrollViewer.HorizontalScrollBarVisibility="Auto" ScrollViewer.HorizontalScrollMode="Enabled">
                        <ListView.ItemTemplate>
                            <DataTemplate                                >
                                <ComboBox x:ConnectionId='12'                                                                IsEditable="True"                                                                                                       />
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </Grid>
            </TabViewItem>
            <TabViewItem Header="Tutor Moves">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <CommandBar Grid.Row="0">
                        <AppBarButton x:ConnectionId='8' Icon="Save" Label="Save"                     />
                        <AppBarButton x:ConnectionId='9' Icon="Page" Label="Preview"                        />
                    </CommandBar>
                    <AutoSuggestBox x:ConnectionId='4' Grid.Row="1" x:Name="TutorSearch" PlaceholderText="Search tutor/move"                            />
                    <ListView x:ConnectionId='5' Grid.Row="2" x:Name="TutorList"                                                       SelectionMode="Multiple" ScrollViewer.VerticalScrollBarVisibility="Auto" ScrollViewer.VerticalScrollMode="Auto" ScrollViewer.HorizontalScrollBarVisibility="Auto" ScrollViewer.HorizontalScrollMode="Enabled">
                        <ListView.ItemTemplate>
                            <DataTemplate                      >
                                <TextBlock x:ConnectionId='7'                />
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </Grid>
            </TabViewItem>
        </TabView>
    </Grid>
</Page>



