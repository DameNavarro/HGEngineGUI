<?xml version="1.0" encoding="utf-8"?>
<Page x:ConnectionId='1'
    x:Class="HGEngineGUI.Pages.TrainersPage"
    x:Name="Root"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
    <Grid Padding="12">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="320"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Grid Grid.Column="0" RowDefinitions="Auto,*" RowSpacing="8">
            <TextBox x:ConnectionId='21' x:Name="SearchBox" Grid.Row="0" PlaceholderText="Search trainers"                               Width="300"/>
            <ListView x:ConnectionId='22'
                Grid.Row="1"
                x:Name="TrainerList"
                IsItemClickEnabled="True"
                                          
                ScrollViewer.VerticalScrollBarVisibility="Auto"
                ScrollViewer.VerticalScrollMode="Auto"
                ScrollViewer.HorizontalScrollBarVisibility="Auto"
                ScrollViewer.HorizontalScrollMode="Enabled"/>
        </Grid>

        <ScrollViewer Grid.Column="1" Margin="16,0,0,0" VerticalScrollBarVisibility="Auto" VerticalScrollMode="Auto">
            <StackPanel Spacing="8">
            <TextBlock Text="Trainer details" FontWeight="SemiBold"/>
            <TextBlock x:ConnectionId='2' x:Name="HeaderText" TextWrapping="Wrap" TextTrimming="None"/>
            <Grid ColumnSpacing="8">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <ComboBox x:ConnectionId='16' x:Name="ClassCombo" Grid.Column="0" PlaceholderText="Class"/>
                <TextBox x:ConnectionId='17' x:Name="AIFlagsBox" Grid.Column="1" PlaceholderText="AI flags"/>
                <ComboBox x:ConnectionId='18' x:Name="BattleTypeCombo" Grid.Column="2">
                    <ComboBoxItem Content="SINGLE_BATTLE"/>
                    <ComboBoxItem Content="DOUBLE_BATTLE"/>
                </ComboBox>
                <ComboBox x:ConnectionId='19' x:Name="Item1Combo" Grid.Column="3" PlaceholderText="Item 1"/>
                <ComboBox x:ConnectionId='20' x:Name="Item2Combo" Grid.Column="4" PlaceholderText="Item 2"/>
            </Grid>
            <Grid ColumnSpacing="8">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <ComboBox x:ConnectionId='14' x:Name="Item3Combo" Grid.Column="0" PlaceholderText="Item 3"/>
                <ComboBox x:ConnectionId='15' x:Name="Item4Combo" Grid.Column="1" PlaceholderText="Item 4"/>
            </Grid>
            <CommandBar>
                <AppBarButton x:ConnectionId='11' Icon="PreviewLink" Label="Preview Header"                               />
                <AppBarButton x:ConnectionId='12' Icon="Save" Label="Save Header"                      />
                <AppBarButton x:ConnectionId='13' Icon="Refresh" Label="Restore Backup"                               />
            </CommandBar>

            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" VerticalScrollMode="Auto" HorizontalScrollBarVisibility="Auto" HorizontalScrollMode="Enabled">
                <StackPanel x:ConnectionId='10' x:Name="PartyStack" Spacing="8"/>
            </ScrollViewer>

            <CommandBar>
                <AppBarButton x:ConnectionId='3' Icon="PreviewLink" Label="Preview"                       />
                <AppBarButton x:ConnectionId='4' Icon="Save" Label="Save Party"                    />
                <AppBarSeparator/>
                <AppBarButton x:ConnectionId='5' Label="New Row"                        >
                    <AppBarButton.Icon>
                        <FontIcon Glyph="+"/>
                    </AppBarButton.Icon>
                </AppBarButton>
                <AppBarButton x:ConnectionId='6' Label="Move Up"                         >
                    <AppBarButton.Icon>
                        <FontIcon Glyph="↑"/>
                    </AppBarButton.Icon>
                </AppBarButton>
                <AppBarButton x:ConnectionId='7' Label="Move Down"                           >
                    <AppBarButton.Icon>
                        <FontIcon Glyph="↓"/>
                    </AppBarButton.Icon>
                </AppBarButton>
                <AppBarButton x:ConnectionId='8' Label="Delete Row"                         >
                    <AppBarButton.Icon>
                        <SymbolIcon Symbol="Delete"/>
                    </AppBarButton.Icon>
                </AppBarButton>
                <AppBarSeparator/>
                <AppBarButton x:ConnectionId='9' Label="Open trainers.s"                           >
                    <AppBarButton.Icon>
                        <SymbolIcon Symbol="OpenFile"/>
                    </AppBarButton.Icon>
                </AppBarButton>
            </CommandBar>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>



