<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="HGEngineGUI.Pages.SpeciesDetailPage"
    x:Name="SpeciesPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                xmlns:local="using:HGEngineGUI.Pages"
                xmlns:data="using:HGEngineGUI.Data"
    mc:Ignorable="d">
    <Page.KeyboardAccelerators>
        <KeyboardAccelerator Key="S" Modifiers="Control" Invoked="OnCtrlS"/>
    </Page.KeyboardAccelerators>
    <Grid Padding="16" RowDefinitions="Auto,*">
        <StackPanel Orientation="Horizontal" Spacing="12">
            <Image x:Name="Icon" Width="64" Height="64"/>
            <StackPanel>
                <TextBlock x:Name="Title" FontSize="22" FontWeight="SemiBold"/>
                <TextBlock x:Name="Subtitle" Foreground="Gray"/>
                <TextBlock x:Name="StatusText" Foreground="Red" TextWrapping="WrapWholeWords"/>
            </StackPanel>
        </StackPanel>

        <TabView x:Name="Tabs" Grid.Row="1">
            <TabViewItem Header="Overview">
                <ScrollViewer>
                    <StackPanel Padding="8" Spacing="10">
                        <CommandBar>
                            <AppBarButton Icon="Save" Label="Save" Click="OnSaveOverview"/>
                            <AppBarButton Icon="Page" Label="Preview" Click="OnPreviewOverview"/>
                        </CommandBar>
                        <Grid ColumnDefinitions="*,*" RowDefinitions="Auto,Auto,Auto,Auto,Auto,Auto,Auto,Auto,Auto,Auto,Auto,Auto,Auto,Auto,Auto" ColumnSpacing="12" RowSpacing="8">
                            <TextBlock Text="Types" Grid.Row="0"/>
                            <StackPanel Grid.Row="0" Grid.Column="1" Orientation="Horizontal" Spacing="8">
                                <ComboBox x:Name="Type1Box" ItemsSource="{x:Bind data:HGParsers.TypeMacros, Mode=OneTime}" Width="180"/>
                                <ComboBox x:Name="Type2Box" ItemsSource="{x:Bind data:HGParsers.TypeMacros, Mode=OneTime}" Width="180"/>
                            </StackPanel>

                            <TextBlock Text="Base Stats" Grid.Row="1"/>
                            <StackPanel Grid.Row="1" Grid.Column="1" Orientation="Horizontal" Spacing="6">
                                <TextBox x:Name="HpBox" Header="HP" Width="80"/>
                                <TextBox x:Name="AtkBox" Header="Atk" Width="80"/>
                                <TextBox x:Name="DefBox" Header="Def" Width="80"/>
                                <TextBox x:Name="SpABox" Header="SpA" Width="80"/>
                                <TextBox x:Name="SpDBox" Header="SpD" Width="80"/>
                                <TextBox x:Name="SpeBox" Header="Spe" Width="80"/>
                            </StackPanel>

                            <TextBlock Text="EV Yields" Grid.Row="2"/>
                            <StackPanel Grid.Row="2" Grid.Column="1" Orientation="Horizontal" Spacing="6">
                                <TextBox x:Name="EvHpBox" Header="HP" Width="80"/>
                                <TextBox x:Name="EvAtkBox" Header="Atk" Width="80"/>
                                <TextBox x:Name="EvDefBox" Header="Def" Width="80"/>
                                <TextBox x:Name="EvSpABox" Header="SpA" Width="80"/>
                                <TextBox x:Name="EvSpDBox" Header="SpD" Width="80"/>
                                <TextBox x:Name="EvSpeBox" Header="Spe" Width="80"/>
                            </StackPanel>

                            <TextBlock Text="Abilities" Grid.Row="3"/>
                            <StackPanel Grid.Row="3" Grid.Column="1" Orientation="Horizontal" Spacing="8">
                                <ComboBox x:Name="Ability1Box" Width="220"/>
                                <ComboBox x:Name="Ability2Box" Width="220"/>
                            </StackPanel>
                            <TextBlock Text="Hidden Ability" Grid.Row="4"/>
                            <StackPanel Grid.Row="4" Grid.Column="1" Orientation="Horizontal" Spacing="8">
                                <ComboBox x:Name="AbilityHiddenBox" Width="220"/>
                                <Button x:Name="PreviewHiddenAbilityBtn" Content="Preview" Click="OnPreviewHiddenAbility"/>
                            </StackPanel>

                            <TextBlock Text="Egg Groups" Grid.Row="5"/>
                            <StackPanel Grid.Row="5" Grid.Column="1" Orientation="Horizontal" Spacing="8">
                                <ComboBox x:Name="Egg1Box" ItemsSource="{x:Bind data:HGParsers.EggGroupMacros, Mode=OneTime}" Width="220"/>
                                <ComboBox x:Name="Egg2Box" ItemsSource="{x:Bind data:HGParsers.EggGroupMacros, Mode=OneTime}" Width="220"/>
                            </StackPanel>

                            <TextBlock Text="Growth Rate" Grid.Row="6"/>
                            <ComboBox x:Name="GrowthBox" Grid.Row="6" Grid.Column="1" ItemsSource="{x:Bind data:HGParsers.GrowthRateMacros, Mode=OneTime}" Width="220"/>

                            <TextBlock Text="Gender/Catch/BaseExp/Egg cycles/Friendship" Grid.Row="7"/>
                            <StackPanel Grid.Row="7" Grid.Column="1" Orientation="Horizontal" Spacing="6">
                                <TextBox x:Name="GenderBox" Header="GenderRatio" Width="120"/>
                                <TextBox x:Name="CatchBox" Header="CatchRate" Width="120"/>
                                <TextBox x:Name="BaseExpBox" Header="BaseExp" Width="120"/>
                                <TextBox x:Name="EggCyclesBox" Header="EggCycles" Width="120"/>
                                <TextBox x:Name="FriendBox" Header="Friendship" Width="120"/>
                            </StackPanel>

                            <TextBlock Text="Held Items" Grid.Row="8"/>
                            <StackPanel Grid.Row="8" Grid.Column="1" Orientation="Horizontal" Spacing="8">
                                <ComboBox x:Name="Item1Box" ItemsSource="{x:Bind data:HGParsers.ItemMacros, Mode=OneTime}" Width="220"/>
                                <ComboBox x:Name="Item2Box" ItemsSource="{x:Bind data:HGParsers.ItemMacros, Mode=OneTime}" Width="220"/>
                            </StackPanel>

                            <TextBlock Text="Run Chance" Grid.Row="9"/>
                            <TextBox x:Name="RunChanceBox" Grid.Row="9" Grid.Column="1" PlaceholderText="0" Width="180"/>

                            <TextBlock Text="Dex Classification" Grid.Row="10"/>
                            <TextBox x:Name="DexClassBox" Grid.Row="10" Grid.Column="1" PlaceholderText="Seed Pokémon"/>

                            <TextBlock Text="Dex Entry" Grid.Row="11"/>
                            <TextBox x:Name="DexEntryBox" Grid.Row="11" Grid.Column="1" AcceptsReturn="True" TextWrapping="Wrap" Height="96"/>

                            <TextBlock Text="Dex Height" Grid.Row="12"/>
                            <TextBox x:Name="DexHeightBox" Grid.Row="12" Grid.Column="1" PlaceholderText="3’03”" Width="180"/>

                            <TextBlock Text="Dex Weight" Grid.Row="13"/>
                            <TextBox x:Name="DexWeightBox" Grid.Row="13" Grid.Column="1" PlaceholderText="28.7 lbs." Width="180"/>
                        </Grid>
                    </StackPanel>
                </ScrollViewer>
            </TabViewItem>
            <TabViewItem Header="Level-up Moves">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <CommandBar Grid.Row="0">
                        <AppBarButton Icon="Add" Label="Add" Click="OnAddLevelUp"/>
                        <AppBarButton Icon="Delete" Label="Delete" Click="OnDeleteLevelUp"/>
                        <AppBarButton Icon="Save" Label="Save" Click="OnSaveLevelUp"/>
                        <AppBarButton Icon="Page" Label="Preview" Click="OnPreviewLevelUp"/>
                    </CommandBar>
                    <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" VerticalScrollMode="Auto">
                        <StackPanel x:Name="LevelUpStack"/>
                    </ScrollViewer>
                </Grid>
            </TabViewItem>
                        <TabViewItem Header="TM/HM">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>
                                <CommandBar Grid.Row="0">
                                    <AppBarButton Icon="Save" Label="Save" Click="OnSaveTmHm"/>
                                    <AppBarButton Icon="Page" Label="Preview" Click="OnPreviewTmHm"/>
                                </CommandBar>
                                <AutoSuggestBox Grid.Row="1" x:Name="TmSearch" PlaceholderText="Search TM/HM" TextChanged="OnTmSearch"/>
                                <ListView Grid.Row="2" x:Name="TmHmList" ItemsSource="{x:Bind _tmhmView, Mode=OneWay}" SelectionMode="Multiple" ScrollViewer.VerticalScrollBarVisibility="Auto" ScrollViewer.VerticalScrollMode="Auto" ScrollViewer.HorizontalScrollBarVisibility="Auto" ScrollViewer.HorizontalScrollMode="Enabled"/>
                            </Grid>
                         </TabViewItem>
            <TabViewItem Header="Evolutions">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <CommandBar Grid.Row="0">
                        <AppBarButton Icon="Add" Label="Add" Click="OnAddEvolution"/>
                        <AppBarButton Icon="Delete" Label="Delete" Click="OnDeleteEvolution"/>
                        <AppBarButton Icon="Save" Label="Save" Click="OnSaveEvolutions"/>
                        <AppBarButton Icon="Page" Label="Preview" Click="OnPreviewEvolutions"/>
                    </CommandBar>
                    <StackPanel Grid.Row="1" Spacing="8">
                        <ScrollViewer VerticalScrollBarVisibility="Auto" VerticalScrollMode="Auto">
                            <StackPanel x:Name="EvolutionStack" Loaded="OnEvolutionStackLoaded"/>
                        </ScrollViewer>
                    </StackPanel>
                </Grid>
            </TabViewItem>
            <TabViewItem Header="Egg Moves">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <CommandBar Grid.Row="0">
                        <AppBarButton Icon="Add" Label="Add" Click="OnAddEggMove"/>
                        <AppBarButton Icon="Delete" Label="Delete" Click="OnDeleteEggMove"/>
                        <AppBarButton Icon="Save" Label="Save" Click="OnSaveEggMoves"/>
                        <AppBarButton Icon="Page" Label="Preview" Click="OnPreviewEggMoves"/>
                    </CommandBar>
                    <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" VerticalScrollMode="Auto">
                        <StackPanel x:Name="EggStack"/>
                    </ScrollViewer>
                </Grid>
            </TabViewItem>
            <TabViewItem Header="Tutor Moves">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <CommandBar Grid.Row="0">
                        <AppBarButton Icon="Save" Label="Save" Click="OnSaveTutors"/>
                        <AppBarButton Icon="Page" Label="Preview" Click="OnPreviewTutors"/>
                    </CommandBar>
                    <AutoSuggestBox Grid.Row="1" x:Name="TutorSearch" PlaceholderText="Search tutor/move" TextChanged="OnTutorSearch"/>
                    <ListView Grid.Row="2" x:Name="TutorList" ItemsSource="{x:Bind _tutorViewDisplay, Mode=OneWay}" SelectionMode="Multiple" ScrollViewer.VerticalScrollBarVisibility="Auto" ScrollViewer.VerticalScrollMode="Auto" ScrollViewer.HorizontalScrollBarVisibility="Auto" ScrollViewer.HorizontalScrollMode="Enabled">
                        <ListView.ItemTemplate>
                            <DataTemplate x:DataType="x:String">
                                <TextBlock Text="{x:Bind}"/>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </Grid>
            </TabViewItem>
        </TabView>
    </Grid>
</Page>


