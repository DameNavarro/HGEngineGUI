<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="HGEngineGUI.Pages.TrainersPage"
    x:Name="Root"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
    <Grid Padding="12">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="320"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <StackPanel Grid.Column="0" Spacing="8">
            <TextBox x:Name="SearchBox" PlaceholderText="Search trainers" TextChanged="OnSearchChanged" Width="300"/>
            <ListView x:Name="TrainerList" IsItemClickEnabled="True" ItemClick="OnTrainerClick" ScrollViewer.HorizontalScrollBarVisibility="Auto" ScrollViewer.HorizontalScrollMode="Enabled"/>
        </StackPanel>

        <StackPanel Grid.Column="1" Margin="16,0,0,0" Spacing="8">
            <TextBlock Text="Trainer details" FontWeight="SemiBold"/>
            <TextBlock x:Name="HeaderText"/>
            <Grid ColumnSpacing="8">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <ComboBox x:Name="ClassCombo" Grid.Column="0" PlaceholderText="Class"/>
                <TextBox x:Name="AIFlagsBox" Grid.Column="1" PlaceholderText="AI flags"/>
                <ComboBox x:Name="BattleTypeCombo" Grid.Column="2">
                    <ComboBoxItem Content="SINGLE_BATTLE"/>
                    <ComboBoxItem Content="DOUBLE_BATTLE"/>
                </ComboBox>
                <ComboBox x:Name="Item1Combo" Grid.Column="3" PlaceholderText="Item 1"/>
                <ComboBox x:Name="Item2Combo" Grid.Column="4" PlaceholderText="Item 2"/>
            </Grid>
            <Grid ColumnSpacing="8">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <ComboBox x:Name="Item3Combo" Grid.Column="0" PlaceholderText="Item 3"/>
                <ComboBox x:Name="Item4Combo" Grid.Column="1" PlaceholderText="Item 4"/>
            </Grid>
            <CommandBar>
                <AppBarButton Icon="PreviewLink" Label="Preview Header" Click="OnPreviewTrainerHeader"/>
                <AppBarButton Icon="Save" Label="Save Header" Click="OnSaveTrainer"/>
                <AppBarButton Icon="Refresh" Label="Restore Backup" Click="OnRestoreTrainerBackup"/>
            </CommandBar>

            <ListView x:Name="PartyList" ScrollViewer.HorizontalScrollBarVisibility="Auto" ScrollViewer.HorizontalScrollMode="Enabled">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Spacing="6" Padding="4">
                            <Grid ColumnDefinitions="Auto,*,*,*,*,*,*,*" ColumnSpacing="8">
                                <StackPanel Grid.Column="0" Width="60">
                                    <TextBlock Text="Slot" FontSize="12"/>
                                    <TextBox Width="60" Text="{Binding Slot, Mode=TwoWay}"/>
                                </StackPanel>
                                <StackPanel Grid.Column="1" Width="200">
                                    <TextBlock Text="Species" FontSize="12"/>
                                    <TextBox Text="{Binding Species, Mode=TwoWay}"/>
                                </StackPanel>
                                <StackPanel Grid.Column="2" Width="80">
                                    <TextBlock Text="Level" FontSize="12"/>
                                    <TextBox Text="{Binding Level, Mode=TwoWay}"/>
                                </StackPanel>
                                <StackPanel Grid.Column="3" Width="80">
                                    <TextBlock Text="IVs" FontSize="12"/>
                                    <TextBox Text="{Binding IVs, Mode=TwoWay}"/>
                                </StackPanel>
                                <StackPanel Grid.Column="4" Width="100">
                                    <TextBlock Text="AbilitySlot" FontSize="12"/>
                                    <TextBox Text="{Binding AbilitySlot, Mode=TwoWay}"/>
                                </StackPanel>
                                <StackPanel Grid.Column="5" Width="200">
                                    <TextBlock Text="Item" FontSize="12"/>
                                    <ComboBox ItemsSource="{Binding ElementName=Root, Path=ItemMacroList, Mode=OneTime}" SelectedItem="{Binding Item, Mode=TwoWay}" IsEditable="True"/>
                                </StackPanel>
                            </Grid>
                            <Grid ColumnDefinitions="*,*,*,*" ColumnSpacing="8">
                                <StackPanel>
                                    <TextBlock Text="Move 1" FontSize="12"/>
                                    <ComboBox ItemsSource="{Binding ElementName=Root, Path=MoveMacroList, Mode=OneTime}" SelectedItem="{Binding Move1, Mode=TwoWay}" IsEditable="True"/>
                                </StackPanel>
                                <StackPanel>
                                    <TextBlock Text="Move 2" FontSize="12"/>
                                    <ComboBox ItemsSource="{Binding ElementName=Root, Path=MoveMacroList, Mode=OneTime}" SelectedItem="{Binding Move2, Mode=TwoWay}" IsEditable="True"/>
                                </StackPanel>
                                <StackPanel>
                                    <TextBlock Text="Move 3" FontSize="12"/>
                                    <ComboBox ItemsSource="{Binding ElementName=Root, Path=MoveMacroList, Mode=OneTime}" SelectedItem="{Binding Move3, Mode=TwoWay}" IsEditable="True"/>
                                </StackPanel>
                                <StackPanel>
                                    <TextBlock Text="Move 4" FontSize="12"/>
                                    <ComboBox ItemsSource="{Binding ElementName=Root, Path=MoveMacroList, Mode=OneTime}" SelectedItem="{Binding Move4, Mode=TwoWay}" IsEditable="True"/>
                                </StackPanel>
                            </Grid>
                            <Grid ColumnDefinitions="*,*,*,*" ColumnSpacing="8">
                                <StackPanel>
                                    <TextBlock Text="Nature" FontSize="12"/>
                                    <TextBox Text="{Binding Nature, Mode=TwoWay}"/>
                                </StackPanel>
                                <StackPanel>
                                    <TextBlock Text="Form" FontSize="12"/>
                                    <TextBox Text="{Binding Form, Mode=TwoWay}"/>
                                </StackPanel>
                                <StackPanel>
                                    <TextBlock Text="Ball" FontSize="12"/>
                                    <TextBox Text="{Binding Ball, Mode=TwoWay}"/>
                                </StackPanel>
                                <StackPanel Orientation="Horizontal" VerticalAlignment="Bottom" Spacing="6">
                                    <CheckBox Content="Shiny Lock" IsChecked="{Binding ShinyLock, Mode=TwoWay}"/>
                                </StackPanel>
                            </Grid>
                            <Grid ColumnDefinitions="*,*" ColumnSpacing="8">
                                <StackPanel>
                                    <TextBlock Text="PP (comma-separated)" FontSize="12"/>
                                    <TextBox Text="{Binding PP, Mode=TwoWay}"/>
                                </StackPanel>
                                <StackPanel>
                                    <TextBlock Text="Nickname" FontSize="12"/>
                                    <TextBox Text="{Binding Nickname, Mode=TwoWay}"/>
                                </StackPanel>
                            </Grid>
                        </StackPanel>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
            <CommandBar>
                <AppBarButton Icon="PreviewLink" Label="Preview" Click="OnPreviewParty"/>
                <AppBarButton Icon="Save" Label="Save Party" Click="OnSaveParty"/>
            </CommandBar>
        </StackPanel>
    </Grid>
</Page>


