<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="HGEngineGUI.Pages.SpeciesListPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local="using:HGEngineGUI.Pages"
    mc:Ignorable="d">
    <Grid Padding="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal" Spacing="12">
            <TextBox x:Name="SearchBox" PlaceholderText="Search species" TextChanged="OnSearchChanged" Width="300"/>
            <TextBlock Text="Read-only preview of parsed species from include/constants/species.h" VerticalAlignment="Center"/>
        </StackPanel>
        <ListView Grid.Row="1" x:Name="SpeciesList" ItemsSource="{x:Bind _filtered, Mode=OneWay}" IsItemClickEnabled="True" ItemClick="OnItemClick" SelectionMode="Single" ScrollViewer.HorizontalScrollBarVisibility="Auto" ScrollViewer.HorizontalScrollMode="Enabled">
            <ListView.ItemTemplate>
                <DataTemplate x:DataType="local:SpeciesEntry">
                    <Grid Padding="4" ColumnSpacing="8">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Image Width="40" Height="40" Source="{x:Bind IconPath, Mode=OneWay}" Stretch="Uniform"/>
                        <TextBlock Grid.Column="1" Width="64" Text="{x:Bind Id}"/>
                        <TextBlock Grid.Column="2" Text="{x:Bind Name}"/>
                    </Grid>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
        <TextBlock Grid.Row="2" Foreground="Gray" Margin="0,8,0,0" Text="Open a species to view Learnsets and Evolutions (coming next)."/>
    </Grid>
</Page>


